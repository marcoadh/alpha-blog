<h1 align="center">Iniciar Sesión</h1>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: sesion_path) do |f| %>
    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :email, 'Correo Eletrónico' %>
        </div>
        <div class="col-sm-8">
            <%= f.email_field :email, class: "form-control", placeholder: "Ingresa tu correo eletrónico" %>
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :password, 'Contraseña' %>
        </div>
        <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control", placeholder: "Ingresa tu contraseña", autocomplete: "off" %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit 'Iniciar Sesión', class: 'btn btn-primary btn-lg' %>
        </div>
    </div>
<% end %>