<h2>Listado de Artículos</h2>

<p>
    <%= link_to 'Crear nuevo Artículo', new_article_path %>
</p>

<table>
    <tr>
        <th>Título-</th>
        <th>Descripción</th>
    </tr>

    <% @articles.each do |article| %>
    <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to 'Ver detalles', article_path(article), class: "btn btn-xs btn-success" %></td>
        <td><%= link_to 'Editar', edit_article_path(article.id), class: "btn btn-xs btn-primary" %></td>
        <td><%= link_to 'Eliminar', article_path(article), method: :delete, data: { confirm: "Estás seguro?"}, class: "btn btn-xs btn-danger" %></td>
    </tr>
    <% end %>
</table>