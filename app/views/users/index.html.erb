<h1 align="center">Todos los Alpha Bloggers</h1>

<div align="center">
    <%= will_paginate %>
    <% @users.each do |user| %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li><%= link_to gravatar_for(user), user_path(user) %></li>
                <li class="article-title">
                    <%= link_to user.username, user_path(user) %>
                </li>
                <li>
                    <small><%= pluralize(user.articles.count, "artículo") if user.articles %></small>
                </li>
                <% if logged_in? and current_user.admin? %>
                <br>
                <li>
                    <%= link_to "Eliminar este usuario", user_path(user), method: :delete,
                            data: { confirm: "Seguro de eliminar al usuario #{user.username} y todos sus artículos?" },
                            class: "btn btn-xs btn-danger" %>
                </li>
                <% end %>
            </div>
        </div>
    </ul>
    <% end %>
    <%= will_paginate %>
</div>
